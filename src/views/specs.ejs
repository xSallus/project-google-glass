                    <section id="content">
                        <img src="../images/glass-esquema-marcado.jpg" alt="Google Glass Eschema" usemap="#meu-mapa">
                        <map name="meu-mapa">
                            <area shape="poly" coords="183,219,266,207,267,243,186,258" href="/google-glass#screen" target="window">
                            <area shape="poly" coords="27,143,82,214,83,248,27,165" href="/google-glass#sensors" target="window">
                            <area shape="circle" coords="158,244,12" href="/google-glass#camera" target="window">
                            <area shape="circle" coords="76,51,12" href="/google-glass#gadgets" target="window">
                        </map>
                        <iframe name="window" id="frame-spec" src="/google-glass" frameborder="0" scrolling="no"></iframe>
                    </section>

                </article>
            </section>

            <%- include('parts/footer') %> 
        </div>
    </body>
</html>